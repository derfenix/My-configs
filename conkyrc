use_xft yes
xftfont Liberation Sans:size=7

update_interval 1
total_run_times 0
double_buffer yes
text_buffer_size 2048

own_window yes
own_window_type override
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

minimum_size 160 0
maximum_width 230

default_color ffffff
draw_shades yes

color0 black
color1 0000FF
color2 FF0000

alignment top_right
gap_x 20
gap_y 40

